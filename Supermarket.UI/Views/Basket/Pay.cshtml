@using Supermarket.Core.Domains;
@model List<Basket>

@{
    ViewData["Title"] = "Alışverişi Tamamla";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["Error"]
    </div>
}


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.Product.Name</h5>
                    <p class="card-text">Adet : @item.Piece</p>
                    <p class="card-text">Toplam Fiyatı : @(item.Piece * item.Product.Price)</p>
                </div>
            </div>
        </div>
    }


</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.Count() > 0)
        {
            <a href="/Basket/paycreditcard" class="btn btn-primary">Kredi Kartı İle Öde</a>
            <a href="/Basket/paycash" class="btn btn-success">Nakit Öde</a>
        }
    </div>
</div>